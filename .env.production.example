# Production Environment Configuration for Oh My Repos
# Copy this file to .env.production and update with your production values

# Environment
ENVIRONMENT=production
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# GitHub API
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_github_personal_access_token

# LLM Settings
CHAT_LLM_PROVIDER=openai
CHAT_LLM_BASE_URL=https://api.openai.com/v1
CHAT_LLM_MODEL=gpt-4
CHAT_LLM_API_KEY=sk-your_openai_api_key

# Ollama Settings (if using local LLM)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=phi3.5:3.8b
OLLAMA_TIMEOUT=120

# Vector Database (Qdrant)
QDRANT_URL=https://your-cluster-url.qdrant.tech
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_API_KEY_HEADER=api-key

# Embedding Service (Jina AI)
EMBEDDING_MODEL=jina-embeddings-v3
EMBEDDING_MODEL_API_KEY=jina_your_api_key
EMBEDDING_MODEL_URL=https://api.jina.ai/v1/embeddings

# Reranker Service (Jina AI)
RERANKER_MODEL=jina-reranker-m0
RERANKER_URL=https://api.jina.ai/v1/rerank
RERANKER_TIMEOUT=60

# Hybrid Search Configuration
BM25_VARIANT=plus
BM25_WEIGHT=0.4
VECTOR_WEIGHT=0.6

# Production Performance Settings
MAX_CONCURRENT_REQUESTS=50
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Monitoring and Observability
METRICS_PORT=8000
HEALTH_CHECK_PORT=8001
ENABLE_PROMETHEUS_METRICS=true
ENABLE_STRUCTURED_LOGGING=true

# Security Settings
SECRETS_BACKEND=env  # Options: env, keyring, aws
AWS_SECRETS_REGION=us-east-1
AWS_SECRETS_PREFIX=ohmyrepos/
KEYRING_SERVICE_NAME=ohmyrepos

# Data Protection
ENABLE_DATA_ENCRYPTION=true
# ENCRYPTION_KEY=your_base64_encoded_encryption_key

# Performance Optimizations
UVLOOP_ENABLED=true
ORJSON_ENABLED=true
HTTP2_ENABLED=true

# Batch Processing
BATCH_SIZE=100
MAX_BATCH_CONCURRENCY=10