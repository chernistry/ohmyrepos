# Environment
ENVIRONMENT=development  # development | testing | production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# GitHub Configuration
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Qdrant Vector Database
QDRANT_URL=https://your-cluster.qdrant.cloud:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=repositories

# Embedding Model (Jina AI)
EMBEDDING_MODEL=jina-embeddings-v3
EMBEDDING_MODEL_API_KEY=jina_your_api_key
EMBEDDING_MODEL_URL=https://api.jina.ai/v1/embeddings

# Reranker (Jina AI)
RERANKER_MODEL=jina-reranker-v2-base-multilingual
RERANKER_API_KEY=jina_your_api_key  # Can use same as EMBEDDING_MODEL_API_KEY
RERANKER_URL=https://api.jina.ai/v1/rerank

# LLM Provider (OpenRouter / OpenAI / Ollama)
CHAT_LLM_PROVIDER=openai  # openai | ollama
CHAT_LLM_BASE_URL=https://openrouter.ai/api/v1
CHAT_LLM_MODEL=deepseek/deepseek-r1-0528:free
CHAT_LLM_API_KEY=sk-or-your_openrouter_api_key

# Ollama (for local LLM)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=phi3.5:3.8b
OLLAMA_TIMEOUT=60

# Search Configuration
BM25_VARIANT=plus  # okapi | plus
BM25_WEIGHT=0.5
VECTOR_WEIGHT=0.5
ENABLE_RERANKING=true

# Security
SECRET_KEY=  # Auto-generated if not provided
ALLOWED_HOSTS=localhost,127.0.0.1
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000
STRUCTURED_LOGGING=true
